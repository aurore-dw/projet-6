<div id="tricks-container" class="row" style="margin-top:20px;">
    {% for trick in tricks %}
        <div class="col-md-3 col-sm-4">
            <div class="card mb-4">
                {% if trick.pictures is not empty %}
                    <img src="{{ asset('uploads/pictures/' ~ trick.pictures|first) }}" alt="Picture" class="card-img-top">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ trick.name }}</h5>
                    <p class="card-text">Created at: {{ trick.createAt ? trick.createAt|date('Y-m-d H:i:s') : '' }}</p>
                    <p class="card-text">Updated at: {{ trick.updateAt ? trick.updateAt|date('Y-m-d H:i:s') : '' }}</p>
                    <a href="{{ path('app_tricks_show', {'id': trick.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_tricks_edit', {'id': trick.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                    {% if app.user is not null %}
                        <a href="{{ path('app_tricks_delete', {'id': trick.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce trick ?')"><i class="fas fa-trash-alt"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
