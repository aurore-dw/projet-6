{% extends 'base.html.twig' %}

{% block title %}Rénitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email, et nous allons vous envoyer un lien pour rénitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
